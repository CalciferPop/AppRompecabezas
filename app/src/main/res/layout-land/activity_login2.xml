<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#7bdcfc"
    android:orientation="horizontal"
    android:padding="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/txt_login_nickname"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/img_logo"
        android:hint="Nickname"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txt_login_password"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_login_nickname"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/img_logo"
        android:hint="Password"
        android:inputType="textPassword" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_acceder"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_login_password"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@id/img_logo"
        android:padding="12dp"
        android:text="Entrar al juego"
        android:theme="@style/MyButton" />

    <TextView
        android:id="@+id/txtAcercade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acerca de....."
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/img_logo"
        android:layout_below="@+id/btn_acceder"
        />


</RelativeLayout>



