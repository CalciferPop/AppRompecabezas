<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context="com.example.hugopc.rompecabezas2.SelectImagenActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="2;Marca una imagen para jugar" />


    <ImageView
        android:id="@+id/img_var_01"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="59dp"
         />

    <ImageView
        android:id="@+id/img_var_02"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignTop="@+id/img_var_01"
         />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_lanza_puzzle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_var_02"
        android:layout_marginTop="25dp"
        android:layout_toStartOf="@+id/img_var_02"
        android:padding="12dp"
        android:text="Jugar"
        android:theme="@style/MyButton" />




</RelativeLayout>
